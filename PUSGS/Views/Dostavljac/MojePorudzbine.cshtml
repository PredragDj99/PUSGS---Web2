
@{
    ViewBag.Title = "MojePorudzbine";
}
<html>
<head>
    <style type="text/css">
        #podela {
            float: left;
            height: 600px;
            width: 480px;
            margin-top: 40px;
            margin-left: 20px;
        }

        .button {
            border: 2px solid #008CBA;
            border-radius: 50%;
            background-color: white;
            color: black;
            padding: 16px 32px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin: 4px 2px;
            transition-duration: 0.4s;
            cursor: pointer;
        }

            .button:hover {
                background-color: #008CBA;
                color: white;
            }

        table, th, td {
            border: 2px solid;
            text-align: center;
            padding-left: 10px;
            padding-right: 10px;
            padding-top: 4px;
            padding-bottom: 3px;
            border-left-color: blue;
            border-right-color: blue;
            border-top-color: blue;
            border-bottom-color: blue;
            font-size: 18px;
        }

        th {
            background-color: lightskyblue;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2
        }

        img {
            border-color: #008CBA;
            border: 2px solid #008CBA;
            border-radius: 50%;
            height: 60px;
            width: 120px;
        }

        h1,h3 {
            padding-top: 20px;
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Povratak na pocetnu", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Profil", "Index", "Dostavljac")</li>
                    <li>@Html.ActionLink("Nove porudzbine", "NovePorudzbine", "Dostavljac")</li>
                    <li>@Html.ActionLink("Moje porudzbine", "MojePorudzbine", "Dostavljac")</li>
                    <li>@Html.ActionLink("Trenutna porudzbina", "TrenutnaPorudzbina", "Dostavljac")</li>
                    <li>@Html.ActionLink("Log out", "LogOut", "Dostavljac")</li>
                </ul>
            </div>
        </div>
    </div>

    <h1>Moje porudzbine</h1><br />

    @if (ViewBag.statusVerifikacije == "Zahtev je odbijen" || ViewBag.statusVerifikacije == "Zahtev se procesira")
    {
        <h3>Nemate pravo pristupa ukoliko vas admin ne verifikuje. Status proverite na sovm profilu.</h3>
    }
    else if (ViewBag.statusVerifikacije != "Zahtev je odbijen" && ViewBag.statusVerifikacije != "Zahtev se procesira")
    {
        <table>
            <tr>
                <th colspan="7">Vase porudzbina</th>
            </tr>
            <tr>
                <th>Proizvodi koji su poruceni</th>
                <th>Kolicina po proizvodu</th>
                <th>Adresa</th>
                <th>Email</th>
                <th>Komentar</th>
                <th>Cena</th>
                <th>Status</th>
            </tr>
            @foreach (var item in ViewBag.prikazKaoKodKorisnika)
            {
                <tr>
                    <td>@item.Proizvod</td>
                    <td>@item.Kolicina</td>
                    <td>@item.Adresa</td>
                    <td>@item.Email</td>
                    <td>@item.Komentar</td>
                    <td>@item.Cena</td>
                    <td>@item.StatusPor</td>
                </tr>
            }
        </table>
    }
</body>
</html>