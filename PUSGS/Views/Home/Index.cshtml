@{
    ViewBag.Title = "Home Page";
}

<html>
<head>
    <style type="text/css">
        #podela {
            float: left;
            height: 400px;
            width: 400px;
            margin-top: 40px;
            margin-left: 70px;
        }

        .button {
            border: 2px solid #008CBA;
            border-radius: 50%;
            background-color: white;
            color: black;
            padding: 16px 32px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin: 4px 2px;
            transition-duration: 0.4s;
            cursor: pointer;
        }

            .button:hover {
                background-color: #008CBA;
                color: white;
            }

        td {
            padding-top: 2px;
            padding-bottom: 2px;
            padding-right: 2px;
            padding-left: 2px;
        }

            td:first-child {
                padding-left: 2px;
                padding-right: 0;
            }
    </style>
</head>
<body>
    <div class="jumbotron">
        <div id="podela">
            <h1>Prijava</h1><br />
            <form action="~/Home/Prijava" method="post">
                <table>
                    <tr>
                        <td><label>E-mail adresa: </label></td>
                        <td><input type="email" name="email" required="required" /></td>
                    </tr>
                    <tr>
                        <td><label>Lozinka: </label></td>
                        <td><input type="password" name="lozinka" required="required" /></td>
                    </tr>
                </table>
                <br />
                <input type="submit" class="button" value="Prijava" />
                <h2>@ViewBag.prijava</h2>
            </form>
        </div>
        <div id="podela">
            <h1>Registracija</h1><br />
            <form action="~/Home/Registracija" method="post">
                <input type="submit" class="button" value="Registruj se" />
            </form>
        </div>
    </div>
</body>
</html>