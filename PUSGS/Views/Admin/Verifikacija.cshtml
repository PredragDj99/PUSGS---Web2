
@{
    ViewBag.Title = "Verifikacija";
}
<html>
<head>
    <style type="text/css">
        #first {
            margin-top: 20px;
            padding-left: 10px; /*od ivice diva*/
            padding-right: 10px;
            width: auto;
            height: auto;
            float: left;
        }

        #second {
            /* border: 3px solid red; */
            float: right;
            margin-top: 20px;
            padding-left: 10px; /*od ivice diva*/
            padding-right: 10px;
        }

        .button {
            border: 2px solid #008CBA;
            border-radius: 50%;
            background-color: white;
            color: black;
            padding: 16px 32px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin: 4px 2px;
            transition-duration: 0.4s;
            cursor: pointer;
        }

            .button:hover {
                background-color: #008CBA;
                color: white;
            }

        table, th, td {
            border: 1px solid;
            text-align: center;
            padding-left: 20px;
            padding-right: 20px;
            padding-top: 4px;
            padding-bottom: 3px;
            border-left-color: blue;
            border-right-color: blue;
            border-top-color: blue;
            border-bottom-color: blue;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2
        }

        th {
            background-color: lightskyblue;
        }

        img {
            border-color: black;
            border: 2px solid black;
            height: 130px;
            width: 140px;
        }

        h1 {
            padding-top: 20px;
            text-align: center;
        }

        .linkButton {
            background-color: greenyellow;
            color: black;
            text-decoration: none;
            font-family: Arial;
            font-size: 15px;
            padding: 10px 20px;
        }

            .linkButton:hover {
                background-color: deepskyblue;
                color:white;
                text-decoration:none;
            }
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Povratak na pocetnu", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Profil", "Index", "Admin")</li>
                    <li>@Html.ActionLink("Verifikacija", "Verifikacija", "Admin")</li>
                    <li>@Html.ActionLink("Sve porudzbine", "SvePorudzbine", "Admin")</li>
                    <li>@Html.ActionLink("Dodavanje proizvoda", "DodavanjeProizvoda", "Admin")</li>
                    <li>@Html.ActionLink("Log out", "LogOut", "Admin")</li>
                </ul>
            </div>
        </div>
    </div>

    <h1>Verifikacija</h1><br />

    <table>
        <tr>
            <th>Korisnicko ime</th>
            <th>Email</th>
            <th>Lozinka</th>
            <th>Ime</th>
            <th>Prezime</th>
            <th>Datum rodjenja</th>
            <th>Adresa</th>
            <th>Tip korisnika</th>
            <th>Slika</th>
            <th>Verifikovan</th>
        </tr>
        @foreach (var item in @ViewBag.zaVerifikaciju)
        {
        <tr>
            <td>@item.KorisnickoIme</td>
            <td>@item.Email</td>
            <td>@item.Lozinka</td>
            <td>@item.Ime</td>
            <td>@item.Prezime</td>
            <td>@Convert.ToDateTime(item.DatumRodjenja).ToString("dd/MM/yyyy")</td>
            <td>@item.Adresa</td>
            <td>@item.TipKorisnika</td>
            @{string s = item.Slika;}
            <td><img src='@Url.Content($"~/Content/Images/{s}")' alt="SLIKA"></td>
            @if (item.Verifikovan == "Nije verifikovan")
            {
                <td>
                    <a class="linkButton" href="/Admin/Prihvati?email=@item.Email">Prihvati</a><br /><br />
                    <a class="linkButton" href="/Admin/Odbij?email=@item.Email">Odbij</a>
                </td>
            }
            else if (item.Verifikovan != "Nije verifikovan")
            {
                <td>@item.Verifikovan</td>
            }
        </tr>
        }
    </table>


</body>
</html>