
@{
    ViewBag.Title = "DodavanjeProizvoda";
}
<html>
<head>
    <style type="text/css">
        .button {
            border: 2px solid #008CBA;
            border-radius: 50%;
            background-color: white;
            color: black;
            padding: 16px 32px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin: 4px 2px;
            transition-duration: 0.4s;
            cursor: pointer;
        }

            .button:hover {
                background-color: #008CBA;
                color: white;
            }

        td {
            padding-top: 2px;
            padding-bottom: 2px;
            padding-right: 2px;
            padding-left: 15px;
        }

            td:first-child {
                padding-left: 2px;
                padding-right: 0;
            }

        h1{
            padding-top:20px;
            text-align:center;
        }

        input[type="text"] {
            width: 300px;
            border-bottom: 2px solid red;
            border-top:none;
            border-left:none;
            border-right:none;
        }
        label{
            font-size:15px;
        }
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Povratak na pocetnu", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Profil", "Index", "Admin")</li>
                    <li>@Html.ActionLink("Verifikacija", "Verifikacija", "Admin")</li>
                    <li>@Html.ActionLink("Sve porudzbine", "SvePorudzbine", "Admin")</li>
                    <li>@Html.ActionLink("Dodavanje proizvoda", "DodavanjeProizvoda", "Admin")</li>
                    <li>@Html.ActionLink("Log out", "LogOut", "Admin")</li>
                </ul>
            </div>
        </div>
    </div>

    <h1>Dodavanje proizvoda</h1><br />
    
    <form action="~/Admin/DodajProizvod" method="post">
        <table>
            <tr>
                <td><label>Ime proizvoda: </label></td>
                <td><input type="text" name="imeProizvoda" required="required" /></td>
            </tr>
            <tr>
                <td><label>Cena: </label></td>
                <td><input type="text" name="cena" required="required" /></td>
            </tr>
            <tr>
                <td><label>Sastojci: </label></td>
                <td><input type="text" name="sastojci" required="required" /></td>
            </tr>
        </table><br />
        <input type="submit" class="button" value="Dodaj proizvod" />
    </form><br /><br />
    <h2>@ViewBag.uspesno</h2>

</body>
</html>
